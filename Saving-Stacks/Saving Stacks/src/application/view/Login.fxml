<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">
   <children>
      <Pane fx:id="loginAnchor" prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: FFFFFF;">
         <children>
            <ImageView fx:id="logoImage" fitHeight="276.0" fitWidth="365.0" layoutX="218.0" layoutY="44.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../data/logo.png" />
               </image>
            </ImageView>
            <PasswordField fx:id="passwordField" layoutX="192.0" layoutY="361.0" onAction="#handle" prefHeight="46.0" prefWidth="416.0" promptText="Please Enter Your Password:" style="-fx-background-color: F5F5F5; -fx-background-radius: 30;">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
            <Button fx:id="login" layoutX="201.0" layoutY="436.0" mnemonicParsing="false" onAction="#handle" prefHeight="46.0" prefWidth="156.0" style="-fx-background-color: black; -fx-background-radius: 30;" text="Login" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="forgotPassword" layoutX="427.0" layoutY="436.0" mnemonicParsing="false" onAction="#handleForgotPassword" prefHeight="46.0" prefWidth="156.0" style="-fx-background-color: white;" text="Forgot Password?">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <Label fx:id="greeting" layoutX="201.0" layoutY="299.0" prefHeight="62.0" prefWidth="259.0" text="Hello, ">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <Label fx:id="name" layoutX="294.0" layoutY="299.0" prefHeight="62.0" prefWidth="305.0" text="Name">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label fx:id="forgotPasswordLabel" alignment="CENTER" layoutX="12.0" layoutY="565.0" prefHeight="52.0" prefWidth="776.0" textAlignment="CENTER">
               <font>
                  <Font name="Bodoni MT" size="18.0" />
               </font>
            </Label>
            <Label fx:id="questionLabel" alignment="CENTER" layoutX="27.0" layoutY="603.0" prefHeight="52.0" prefWidth="751.0">
               <font>
                  <Font name="Bodoni MT" size="18.0" />
               </font>
            </Label>
            <Label fx:id="loginError" layoutX="105.0" layoutY="499.0" prefHeight="28.0" prefWidth="591.0" textAlignment="CENTER" textFill="#c30c0c">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Label>
         </children></Pane>
   </children>
</AnchorPane>
